{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-ts",
            "type": "typescript",
            "tsconfig": "${workspaceRoot}/app",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc"
        },
        {
            "type": "npm",
            "script": "webpack",
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}