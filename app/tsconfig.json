{
    "compileOnSave": true,
    "compilerOptions": {
        "strictPropertyInitialization": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "strict": true,
        "target": "es2017",
        "module": "commonjs",
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "../node_modules"
    ]
}