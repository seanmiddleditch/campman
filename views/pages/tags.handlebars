{{>layouts/page title='Tags' page_icon='tags'}}

{{#*inline "content"}}
<div class='list-group'>
{{#each tags}}
    <div class='list-group-item'>
        <div class='list-item-name'><i class='fa fa-tag'></i> {{this.title}}</div>
    </div>
{{else}}
    <div class='list-group-item'>No results</div>
{{/each}}
</div>
{{/inline}}