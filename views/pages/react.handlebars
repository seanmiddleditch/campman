{{#>layouts/essential title=title}}

{{#*inline "body"}}
<div id='react-content'>{{{content}}}</div>
<script>
    const config = {
        publicURL: new URL('{{config.publicURL}}'),
        {{#if campaign}}campaign: {title: '{{campaign.title}}', url: new URL('{{{campaign.url}}}')},{{/if}}
        {{#if profile}}profile: {nickname: '{{profile.nickname}}', photoURL: new URL('{{{profile.photoURL}}}')},{{/if}}
    }
    const api = new ClientAPI(config.publicURL.toString())
    ReactDOM.hydrate(React.createElement(Application, {api, config}, React.createElement({{component}}, {...{{{json props}}} })),
    document.getElementById('react-content'))
</script>
{{/inline}}

{{/layouts/essential}}