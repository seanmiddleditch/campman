{{>layouts/page title='Wiki' page_icon='files-o'}}

{{#*inline "content"}}
<div class='list-group'>
    {{#if canCreate}}
    <div class='list-group-item'>
        <a href='/wiki/new' class='btn btn-primary'>New Page</a>
    </div>
    {{/if}}
{{#each pages}}
    <a href='/w/{{this.slug}}' class='list-group-item'>
        <div class='list-item-name'><i class='fa fa-file'></i> {{this.title}}</div>
        {{#if this.labels}}<div class='list-item-details comma-separated'>{{this.labels}}</div>{{/if}}
    </a>
{{else}}
    <div class='list-group-item'>No results</div>
{{/each}}
</div>
{{/inline}}