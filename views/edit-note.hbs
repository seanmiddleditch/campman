{{>header.hbs title=note.title}}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/notes">Notes</a></li>
    <li class="breadcrumb-item"><a href="/n/{{note.slug}}">{{note.title}}</a></li>
    <li class="breadcrumb-item active"><i class="fa fa-pencil"></i> Edit</li>
</ol>
<form method="post">
    {{>note-form.hbs note=note}}
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-9">
            <button class="btn btn-primary">Save</button>
            <button class="btn btn-default">Cancel</button>
        </div>
    </div>
</form>
{{>footer.hbs}}