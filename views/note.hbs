{{>header.hbs title=note.title}}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/notes">Notes</a></li>
    <li class="breadcrumb-item active">{{note.title}}</li>
    <li class="breadcrumb-item"><a href="/n/{{note.slug}}/edit"><i class="fa fa-pencil"></i> Edit</a></li>
</ol>
<div class="page-header">
    <h1>{{note.title}}</h1>
{{#if note.labels}}
    <div class="text-lowercase">
        <i class="fa fa-tags"></i>
        {{#each note.labels}}<span class="label"><a href="/l/{{slug}}">{{slug}}</a></span> {{/each}}
    </div>
{{/if}}
</div>
<div>{{markdown note.body}}</div>
{{>footer.hbs}} 